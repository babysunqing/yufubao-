/* pages/cardDetail/cardDetail.wxss */
.container{
  padding-left: 32rpx;
  padding-right: 32rpx
}
.crad{
  width: 100%;
  height: 228rpx;
  background-color: #fafafa;
  margin-top: 54rpx;
  border-radius: 6px
}
.cardMian{
  height: 164rpx;
  background-color: #BF793A;
  border-top-left-radius:6px;
  border-top-right-radius:6px;
  position: relative
}
.cardMian image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 32rpx;
  margin-left: 24rpx;
  float: left
}
.cardMian .cardTitle{
  position: absolute;
  top: 44rpx;
  left: 140rpx;
  font-size: 24rpx;
  color: #fff;
}
.cardMian .cardDetail{
  position: absolute;
  top: 84rpx;
  left: 140rpx;
  font-size: 34rpx;
  color: #fff;
}
.cardTime{
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  color: #c2c2c2;
}
.cardTime .time{
  font-size: 24rpx;
  color: #c2c2c2;
  margin-left: 24rpx;
  float: left
}
.cardTime .more{
  float: right;
  margin-right: 16rpx
}
.cardTime .clickDetail{
  float: right;
  margin-right: 5rpx
}
.cardExplain{
  width: 100%;
  margin-top: 50rpx;
}
.cardExplain .title{
  font-size: 30rpx;
  color: #333;
}
.explainDetail{
  margin-top: 15rpx;
}
.explainItem{
  width: 100%;
  font-size: 30rpx;
  color: #333;
  line-height: 40rpx;
  
}
.input{
  border-bottom: 1px #f0f0f0 solid
}
.placeholder{
  color: #ccc;
  font-size: 30rpx;
}
.radioGroup{
  width: 100%
}
.radioGroup text{
  font-size: 30rpx;
  color: #fd9840
}
.radioItem{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px #f0f0f0 solid
}
.radio{
  float: right;
  margin-right: 20rpx;
}
.done{
  width: 100%;
  height: 88rpx;
  margin-top: 80rpx;
  background-color: #BF793A;
  color: #fff;
  font-size: 34rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 6px;
}