/* pages/shopCard/shopCard.wxss */
.dateItem{
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  background-color: #fff;
  border-bottom: 1px #f5f5f5 solid; 
}
.one{
  border-top: 1px #f5f5f5 solid;
}
.time{
  font-size: 30rpx;
  color: #333;
  margin-left: 32rpx
}
.cardNum{
  float: right;
  color: #999;
  font-size: 28rpx;
  margin-right: 10rpx
}
.more{
  float: right;
  color: #999;
  margin-right: 20rpx
}
.cardList{
  width: 100%;
  height: auto;
  background-color: #f5f5f5;
  /* display: none; */
  padding-bottom: 32rpx;
}
.cradItem{
  width: 90%;
  height: 228rpx;
  background-color: #fff;
  margin-left: 5%;
  margin-top: 20rpx;
  border-radius: 6px
}
.cardMian{
  height: 164rpx;
  background-color: #BF793A;
  border-top-left-radius:6px;
  border-top-right-radius:6px;
  position: relative
}
.cardMian image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 32rpx;
  margin-left: 24rpx;
  float: left
}
.cardMian .cardTitle{
  position: absolute;
  top: 44rpx;
  left: 140rpx;
  font-size: 24rpx;
  color: #fff;
  
}
.cardMian .cardDetail{
  position: absolute;
  top: 84rpx;
  left: 140rpx;
  font-size: 34rpx;
  color: #fff;
}
.cardTime{
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  color: #c2c2c2;
}
.cardTime .time{
  font-size: 24rpx;
  color: #c2c2c2;
  margin-left: 24rpx;
  float: left
}
.cardTime .more{
  float: right;
  margin-right: 16rpx
}
.cardTime .clickDetail{
  float: right;
  margin-right: 5rpx
}